<?xml version="1.0" encoding="utf-8" ?>
<Element xmlns="http://xml.sunsol.me/Win32UI/DirectUI/v1">
  <Element.Styles>
    <Style Id="TitleText">
      <Text ThemePart="0" ThemeState="0" />
    </Style>
    <Style Id="BodyText">
      <Text ThemePart="0" ThemeState="0" />
    </Style>
    <Style Id="Footer">
      <BackgroundFill ThemePart="0" ThemeState="0" />
    </Style>
  </Element.Styles>

  <Grid>
    <Grid.Columns>
      <Column Width="Auto" />
      <Column Width="*" />
    </Grid.Columns>
    <Grid.Rows>
      <Row Height="*" />
      <Row Height="*" />
      <Row Height="Auto" />
    </Grid.Rows>

    <GridCell ColumnIndex="0" RowIndex="0" RowSpan="2" Halign="Center" Valign="Top" Hstretch="FixedSize" Vstretch="FixedSize">
      <StaticImage Id="MainIcon" MinHeight="48" MinWidth="48" />
    </GridCell>
    <GridCell ColumnIndex="1" RowIndex="0" ColumnSpan="2" Halign="Left" Valign="Top" Hstretch="Stretch" Vstretch="SizeToContent">
      <StaticText Id="MainInstruction" Style="TitleText" TextHalign="Left" TextValign="Top" />
    </GridCell>
    <GridCell ColumnIndex="1" RowIndex="1" Halign="Left" Valign="Top" Hstretch="Stretch" Vstretch="Stretch">
      <StaticText Id="Content" Style="BodyText" TextHalign="Left" TextValign="Top" />
    </GridCell>

    <GridCell ColumnIndex="0" RowIndex="2" Halign="Right" Valign="Center" Hstretch="FixedSize" Vstretch="FixedSize" Margin="0,0,0,0" Style="Footer">
      <CCPushButton Id="OK" Text="OK" Default="true" />
    </GridCell>
  </Grid>
</Element>
