<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="15.1.0-preview-*" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.1.0-preview-*" />

    <ProjectReference Include="../Win32UI.Build.NativeResources/Win32UI.Build.NativeResources.csproj" />
  </ItemGroup>

  <Import Project="../../dir.targets" />

  <Target Name="_CopyBuildOutputs" AfterTargets="AfterBuild">
    <ItemGroup>
      <_BuildOutput Include="$(TargetPath)" />
      <_BuildOutput Include="@(ProjectReference -> '$(OutputPath)%(FileName).dll')" />
      <_BuildOutput Include="Sunburst.Win32UI.Build.targets" />
    </ItemGroup>

    <MakeDir Directories="../../bin/BuildTasks" />
    <Copy SourceFiles="@(_BuildOutput)" DestinationFolder="../../bin/BuildTasks" />
  </Target>
</Project>
