<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp1.1</TargetFrameworks>
    <TargetFrameworks Condition="'$(OS)' == 'Windows_NT'">$(TargetFrameworks); net46</TargetFrameworks>
    <DefineConstants Condition="'$(TargetFramework)' == 'netcoreapp1.1'">IS_CORECLR</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)' == 'net46'">IS_FULL_FRAMEWORK</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp1.1'">
    <PackageReference Include="Microsoft.Build.Framework" Version="15.1.0-preview-*" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.1.0-preview-*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    <Reference Include="Microsoft.Build.Framework" />
    <Reference Include="Microsoft.Build.Utilities.v4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Microsoft.Win32.Resources\Microsoft.Win32.Resources.csproj" />
    <None Include="..\..\Sunburst.Win32UI.GuiEntryPoint.targets" Link="Sunburst.Win32UI.GuiEntryPoint.targets" />
  </ItemGroup>
</Project>
