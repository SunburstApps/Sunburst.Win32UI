    <ProjectReference Include="../../src/Win32UI.LayoutContainers/Win32UI.LayoutContainers.csproj" />
    <ProjectReference Include="../../src/Win32UI.Menus/Win32UI.Menus.csproj" />
    <ProjectReference Include="../../src/Win32UI.MessageBox/Win32UI.MessageBox.csproj" />
    <ProjectReference Include="../../src/Win32UI.Support/Win32UI.Support.csproj" />
    <ProjectReference Include="../../src/Win32UI.TaskDialogs/Win32UI.TaskDialogs.csproj" />
    <ProjectReference Include="../../src/Win32UI.Theming/Win32UI.Theming.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="../../src/Win32UI.Native/x64/Release/Win32UI.Native.dll">
      <Pack>true</Pack>
      <PackagePath>runtimes/win/native</PackagePath>
    </Content>
    <Content Include="../../src/Win32UI.Native/x64/Release/Win32UI.Native.pdb">
      <Pack>true</Pack>
      <PackagePath>runtimes/win/native</PackagePath>
